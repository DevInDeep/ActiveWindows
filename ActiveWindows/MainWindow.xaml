<Window
    x:Class="ActiveWindows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ActiveWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Loaded="WindowLoaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="170"
                Height="35"
                Margin="5"
                Click="DisplayOpenWindows"
                Content="Get Open Windows"
                FontFamily="Segoe UI"
                FontSize="16" />
            <CheckBox
                x:Name="chkFilter"
                Margin="10"
                VerticalAlignment="Center"
                Checked="UseWindowsFilter"
                Content="Filter Windows Applications"
                Unchecked="UseNoFilter" />
        </StackPanel>
        <ListBox x:Name="lstOpenWindows" Grid.Row="1" />
    </Grid>
</Window>
