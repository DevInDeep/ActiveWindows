<Window
    x:Class="ActiveWindows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ActiveWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            Width="170"
            Height="35"
            Margin="5"
            Click="DisplayOpenWindows"
            Content="Get Open Windows"
            FontFamily="Segoe UI"
            FontSize="16" />
        <ListBox x:Name="lstOpenWindows" Grid.Row="1" />
    </Grid>
</Window>
